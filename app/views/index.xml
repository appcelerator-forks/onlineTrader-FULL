<Alloy>
	<Window class="container">
		<View id="header">
			<Label class="h1" id="appTitle">LOGIN</Label>
		</View>
		<View layout="vertical" id="loadingBar" height="0" width="100" borderRadius="15" top="230" zIndex="99" opacity="1" backgroundColor="#2E2E2E" >
				<ActivityIndicator  id="activityIndicator" />
				<Label text="Loading" left="20" top="10" color="#ffffff" />
		</View>
		<View class="content" id="content">
			<ScrollView showVerticalScrollIndicator="true" showHorizontalScrollIndicator="true" height="320" width="100%">
				<Label backgroundImage="/images/online-trader-logo.png" width="120" height="120" bottom="150" />
				<TextField id="username" /><Label id="usernamehint">Enter Username</Label>
				<TextField id="password" /><Label id="passwordhint">Enter Password</Label>
			</ScrollView>
			<Button id="btnLogin" onClick="doLogin"    />
			
		</View>

	</Window>
</Alloy>