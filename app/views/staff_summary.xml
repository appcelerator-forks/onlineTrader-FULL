<Alloy>
	<Window class="container" id="dealer_summary">
		<Require src="_header" id="header"></Require>
		<View class="content" height="150dp">
			<Label class="h2">STAFF - SUMMARY</Label>
			<ImageView class="separator"></ImageView>
			<View height="30">
				<Label top="10dp" left="10dp">Today Commission</Label>
				<Label class="summary_figure" id="todayCommission">0</Label>
				<Label class="button" top="10dp" left="80%" mod="daily_commission" onClick="popup">DETAIL</Label>
			</View>
			
			<View height="30">
				<Label top="10dp" left="10dp">Monthly Commission</Label>
				<Label class="summary_figure" id="monthCommission">0</Label>
				<Label class="button" top="10dp" left="80%" mod="monthly_commission" onClick="popup">DETAIL</Label>							</View>
			<Label class="h2">MONTHLY SALES</Label>
			<ImageView class="separator"></ImageView>
			<ActivityIndicator id="activityIndicator" message="Loading..."/>
			 
		</View>
		<View top="150dp" >
			<ScrollView height="77%" layout="vertical" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER">
				<WebView id="webview" layout="vertical" height="auto" disableBounce="true" loading="true"  width="100%" url="/html/dealer_summary_inventory.html" />
			</ScrollView>	
		</View>
		<ScrollView id="noticeBoard" bottom="60" backgroundColor="#E3F5FE" layout="horizontal" scrollType="horizontal" height="20" overScrollMode="Titanium.UI.Android.OVER_SCROLL_NEVER"></ScrollView>
		<Require src="_dealer_footer" id="footer"></Require>
		
	</Window>
</Alloy>